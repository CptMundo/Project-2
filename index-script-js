function showPopup() {
            var popup = document.getElementById('popup');
            popup.style.display = 'block';
        }

function closePopup() {
            var popup = document.getElementById('popup');
            popup.style.display = 'none';


function showPopup() {
        var popup = document.getElementById("myPopup");
        popup.style.display = "block";
      }

function closePopup() {
        var popup = document.getElementById("myPopup");
        popup.style.display = "none";
      }
    